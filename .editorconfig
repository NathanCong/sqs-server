# EditorConfig 官网（http://editorconfig.org）
root = true

# 通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# JSON、YAML 配置文件
[{*.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2

# JavaScript、TypeScript、Vue 文件
[{*.js,*.jsx,*.ts,*.tsx,*.vue}]
indent_style = space
indent_size = 2

# Less 文件
[*.less]
indent_style = space
indent_size = 2

# HTML、CSS 文件
[*.{html,css}]
indent_style = space
indent_size = 2
